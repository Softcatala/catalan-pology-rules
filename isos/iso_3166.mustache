# Remove XML entities.
include file="filter.include"

# Remove accelerator and  hyphen inside words.
addFilterRegex match="(_|~|&)" on="pmsgid,pmsgstr"


{{#rules}}
{^{{source}}$}i
id="iso_3166-{{source}}"
{{#targets}}
valid msgstr="{{target}}"
{{/targets}}
hint="El nom de país «{{source}}» es tradueix per «{{all_targets}}».{{#hint}} {{hint}}.{{/hint}}"

{{/rules}}
